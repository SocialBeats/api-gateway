{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway avanzado para arquitectura de microservicios - SocialBeats",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "env:local": "node scripts/copyEnv.cjs local",
    "env:docker": "node scripts/copyEnv.cjs docker",
    "env:compose": "node scripts/copyEnv.cjs compose",
    "dev:local": "npm run env:local && npm run start",
    "dev:compose": "docker-compose up --build",
    "dev:docker": "npm run env:docker && npm run docker:build && npm run docker:run",
    "docker:build": "docker build -t api-gateway .",
    "docker:run": "docker run -it --rm --name api-gateway-app -p 3000:3000 --add-host=host.docker.internal:host-gateway --env-file .env api-gateway",
    "test": "cross-env NODE_ENV=test vitest --run",
    "test:watch": "cross-env NODE_ENV=test vitest --watch",
    "test:coverage": "cross-env NODE_ENV=test vitest --coverage --run",
    "test:integration": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "test:health": "bash tests/health-check.sh",
    "test:connectivity": "bash tests/connectivity-test.sh",
    "lint": "prettier --check '**/*.{cjs,js,ts,css,md}'",
    "lint:fix": "prettier --write '**/*.{cjs,js,ts,css,md}'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "express",
    "rate-limiting",
    "circuit-breaker",
    "socialbeats"
  ],
  "author": "danvelcam",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^8.1.3",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.9.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@vitest/coverage-istanbul": "^2.1.9",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^2.1.9"
  }
}
